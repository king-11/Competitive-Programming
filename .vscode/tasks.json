{
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-Wall",
        "-Wextra",
        "-std=c++20",
        "-Wshadow",
        "-Wformat=2",
        "-Wfloat-equal",
        "-Wlogical-op",
        "-fsanitize=address",
        "-fsanitize=undefined",
        "-fno-sanitize-recover",
        "-fstack-protector",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.out"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
